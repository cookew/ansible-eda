vrrp_instance {{ vip.name }} {
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ vip.name }}_{{ vip.id }}
    }
    interface {{ vip.interface | default(keepalived_default_interface) }}
    state BACKUP
    virtual_ipaddress {
        {{ vip.ip }}
    }
    virtual_router_id {{ vip.id }}
}
