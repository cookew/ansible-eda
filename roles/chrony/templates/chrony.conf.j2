{% for server in chrony_servers %}
{% if not server == inventory_hostname %}
server {{ server }} minpoll 4 burst iburst prefer
{% endif %}
{% endfor %}

{% for pool in chrony_pools %}
pool {{ pool }} minpoll 4 burst iburst prefer
{% endfor %}

allow 10.0.0.0/8
allow 172.16.0.0/12
allow 192.168.0.0/16
allow 127.0.0.0/8
allow fd42::/16
allow ::1/128
local stratum 7
makestep 0.1 3

driftfile /var/lib/chrony/chrony.drift
rtcsync
cmdport 0

ntsdumpdir /var/lib/chrony
log tracking measurements statistics
logdir /var/log/chrony
leapsectz right/UTC
